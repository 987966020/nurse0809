                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_size_3"
                            android:textColor="@color/gray5"
                            android:text="123" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


