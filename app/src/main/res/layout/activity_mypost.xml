<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chinanurse.cn.nurse.MinePage.Mypost">
    <!-- 标题栏-->
    <RelativeLayout
        style="@style/back_title_RelativeLayout">
        <!-- 返回按钮，扩大点击面，所以用一个布局包裹住-->
        <LinearLayout
            style="@style/back_layout"
            android:id="@+id/mypost_back">
            <ImageView
                style="@style/back_img"/>
            <TextView
                style="@style/back_text" />
        </LinearLayout>
        <!-- 标题-->
        <TextView
            style="@style/back_title_text"
            android:text="我的帖子"/>
        <!-- 底部紫线-->
        <TextView
            style="@style/back_title_pupleline"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_content"></ListView>

</LinearLayout>
